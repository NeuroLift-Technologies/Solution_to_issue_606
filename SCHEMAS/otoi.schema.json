{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/otoi.schema.json",
  "title": "Orchestrated Terms of Interaction",
  "type": "object",
  "required": ["otoi_version", "session_id", "participants", "rules"],
  "properties": {
    "otoi_version": {
      "type": "string",
      "pattern": "^v\\d+\\.\\d+$"
    },
    "session_id": {
      "type": "string",
      "minLength": 1
    },
    "participants": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 2
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["appliesTo", "description", "enforcement"],
        "properties": {
          "appliesTo": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "description": { "type": "string", "minLength": 1 },
          "enforcement": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}
