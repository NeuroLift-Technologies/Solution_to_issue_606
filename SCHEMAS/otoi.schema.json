{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://neuro-lift.org/schemas/otoi.schema.json",
  "title": "Orchestrated Terms of Interaction",
  "type": "object",
  "required": ["otoi_version", "relationships"],
  "properties": {
    "otoi_version": { "type": "string", "pattern": "^v\\d+\\.\\d+$" },
    "relationships": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["session_id", "agents", "governance_rules"],
        "properties": {
          "session_id": { "type": "string", "minLength": 1 },
          "agents": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["agent_id", "role", "toi_ref"],
              "properties": {
                "agent_id": { "type": "string", "minLength": 1 },
                "role": { "type": "string", "minLength": 1 },
                "toi_ref": { "type": "string", "minLength": 1 }
              }
            }
          },
          "governance_rules": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          }
        }
      }
    }
  }
}
