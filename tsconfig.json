{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "typeRoots": ["./types"]
  },
  "include": ["FUNCTIONS/**/*.ts", "TESTS/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
