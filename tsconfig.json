{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "./",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "FUNCTIONS/**/*.ts",
    "TESTS/**/*.ts",
    "SCHEMAS/**/*.json",
    "types/**/*.d.ts"
  ]
}
